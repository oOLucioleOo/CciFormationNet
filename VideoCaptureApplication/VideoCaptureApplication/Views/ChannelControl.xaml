<views:BaseControl x:Class="VideoCaptureApplication.Views.ChannelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:controls="clr-namespace:VideoCaptureApplication.Controls"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:VideoCaptureApplication.Views"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">

    <Grid Margin="20,20,20,20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="60" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Button Margin="0,0,0,0"
                    HorizontalAlignment="Left"
                    Click="ButtonTestAPI_OnClick"
                    Content="Test API"
                    Style="{DynamicResource AccentedSquareButtonStyle}" />
        </StackPanel>
    </Grid>
    
</views:BaseControl>