<UserControl x:Class="VideoCaptureApplication.Controls.LanguageItemTemplate"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="300"
             d:DesignWidth="300"
             mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center"
                Background="Transparent"
                Cursor="Hand"
                Orientation="Horizontal">
        <Image Width="22" Height="22" Margin="5,0,10,0" VerticalAlignment="Center" Source="{Binding ImageUrl}" Stretch="Uniform"/>
        <TextBlock VerticalAlignment="Center" Foreground="{StaticResource DarkGrayBrush}" Text="{Binding Name}" />
    </StackPanel>
</UserControl>
